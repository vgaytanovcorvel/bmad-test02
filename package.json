{
  "name": "@tic-tac-toe-showcase/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "serve": "nx serve ui",
    "build": "npm run build:inject && nx run-many --target=build --all && npm run build:restore",
    "build:inject": "node tools/build-hash.js inject",
    "build:restore": "node tools/build-hash.js restore",
    "build:ui": "npm run build:inject && nx build ui && npm run build:restore",
    "build:ui:prod": "npm run build:inject && nx build ui --configuration=production && npm run build:restore",
    "build:ui:static": "npm run build:inject && nx build ui --configuration=static && npm run build:restore",
    "preview": "npm run build:ui:static && nx serve-static ui",
    "test": "nx run-many --target=test --all",
    "test:unit": "nx run-many --target=test --all --testPathPattern=\"\\.spec\\.ts$\" --testPathIgnorePatterns=\"integration\"",
    "test:integration": "nx run-many --target=test --all --testPathPattern=\"\\.integration\\.spec\\.ts$\"",
    "test:watch": "nx run-many --target=test --all --watch",
    "test:e2e": "nx e2e ui-e2e && echo \"E2E tests completed. HTML report available at: apps/ui-e2e/playwright-report/index.html\"",
    "test:e2e:report": "nx e2e ui-e2e && pnpm exec playwright show-report apps/ui-e2e/playwright-report",
    "test:e2e:headed": "nx e2e ui-e2e -- --headed",
    "e2e": "nx e2e ui-e2e",
    "coverage": "nx run-many --target=test --all --coverage",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx lint ui --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "echo \"üîç Starting validation pipeline...\" && echo \"‚è±Ô∏è  Step 1/3: Linting...\" && npm run lint && echo \"‚úÖ Linting passed\" && echo \"‚è±Ô∏è  Step 2/3: Testing...\" && npm run test && echo \"‚úÖ Testing passed\" && echo \"‚è±Ô∏è  Step 3/3: Building...\" && npm run build && echo \"üéâ Validation pipeline completed successfully!\"",
    "graph": "nx graph",
    "reset": "nx reset"
  },
  "private": true,
